pipeline 
{
    environment
    {
    registry = "dilberzaman/cmd-angular"
    registryCredential = "dockerhub"
    dockerImage = ''
    }
  agent any

  stages 
  {
      
     stage('Build docker image')
     {
      steps
      {
        echo "Building docker image"
        script
        {
          dockerImage = docker.build registry + ":$BUILD_NUMBER" 
        }
      }
     }

     stage('Push docker image')
     {
      steps
      {
        echo "Pushing docker image"
        script
        {
           docker.withRegistry('',registryCredential) 
           {
            dockerImage.push()
            dockerImage.push('latest')
           }
        }
      }      
     }
//     stage('Deploy to Dev')
//     {   
//      steps
//      {
//        echo "Deploying to dev environment"
//        sh 'docker rm -f cmd-angular || true'
        //sh 'docker run -d --name=cmd-angular -p 85:80 VIRTUAL_HOST=skillassure.ddns.net -e LETSENCRYPT_HOST=skillassure.ddns.net dilberzaman/cmd-angular'
//        sh 'docker run -d --name=cmd-angular -p 85:80 dilberzaman/cmd-angular'
//      }
//     }
    stage("deploy k8")
    {
      steps
      {
        script
        {
         kubernetesDeploy(configs: "dilberzaman/cmd-angular", kuberconfigId: "KUBERNETES_CLUSTER")
        }
      }
    }
  }
}  
 
