pipeline 
{
    environment
    {
    registry = "dilberzaman/cmd-angular"
    registryCredential = "dockerhub"
    dockerImage = ''
    }
  agent any
  stages 
  {
     stage('Sonarqube'){
      steps{
        echo "Sonarqube codequality"
        sh '''
        sonar-scanner \
        -Dsonar.projectKey=cmd-angular \
        -Dsonar.sources=. \
        -Dsonar.host.url=http://52.45.81.194:9000 \
        -Dsonar.login=sqp_8ec9c3c9da415947a920592f3242c631757ab4a8
          '''
      }
    }
     stage('Build docker image')
     {
      steps
      {
        echo "Building docker image"
        script
        {
          dockerImage = docker.build registry + ":$BUILD_NUMBER" 
        }
      }
     }

     stage('Push docker image')
     {
      steps
      {
        echo "Pushing docker image"
        script
        {
           docker.withRegistry('',registryCredential) 
           {
            dockerImage.push()
            dockerImage.push('latest')
           }
        }
      }      
     }
   stage("deploy k8")
    {
      steps
      {
        script
        {
         kubernetesDeploy(configs: "deployment.yaml", kubeconfigId: "KUBERNETES_CLUSTER")
        }
      }
    }
  }
}  
 
