pipeline 
{
    environment
    {
    registry = "dilberzaman/cmd-angular"
    registryCredential = "github"
    dockerImage = ''
    }
  agent any

  stages 
  {
      
     stage('Build docker image')
     {
      steps
      {
        echo "Building docker image"
        script
        {
          dockerImage = docker.build registry + ":$BUILD_NUMBER" 
        }
      }
     }

     stage('Push docker image')
     {
      steps
      {
        echo "Pushing docker image"
        script
        {
           docker.withRegistry('',registryCredential) 
           {
            dockerImage.push()
            dockerImage.push('latest')
           }
        }
      }      
     }
    stage("deploy in k8 cluster")
     {
      kubernetsDeploy(configs: 'springBootMongo.yml',kubeconfigId: 'KUBERNETES_CLUSTER_CONFIG', enableConfigSubstitution: true)
     }
    
  }
}  
